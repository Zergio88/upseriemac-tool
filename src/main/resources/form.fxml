<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.Controlador" prefHeight="600" prefWidth="1000" stylesheets="@application.css">
    <children>
        <!-- TabPane principal -->
        <TabPane prefWidth="1000" prefHeight="600">
            <tabs>
                <Tab text="Consulta" closable="false">
                    <AnchorPane>
                        <children>
                            <VBox fx:id="consultaNotebooksSection" spacing="14" alignment="CENTER" style="-fx-padding: 20;" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                                <Text text="Consulta de Notebooks" styleClass="bold-underline" />

                                <HBox spacing="10" alignment="CENTER">
                                    <Label text="Obtener registros:" />
                                    <ComboBox fx:id="consultaComboBoxNotebooks" onAction="#handleComboBoxSelectionNotebooks"/>
                                </HBox>

                                <StackPane alignment="CENTER">
                                    <HBox alignment="CENTER" spacing="10" visible="false" fx:id="usuarioBoxNotebooks">
                                        <Label text="Usuario:" />
                                        <ComboBox fx:id="usuarioComboBoxNotebooks" />
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10" visible="false" fx:id="fechaBoxNotebooks">
                                        <Label text="Fecha:" />
                                        <TextField fx:id="dayFieldNotebooks" promptText="DD" prefWidth="50" />
                                        <TextField fx:id="monthFieldNotebooks" promptText="MM" prefWidth="50" />
                                        <TextField fx:id="yearFieldNotebooks" promptText="YYYY" prefWidth="70" />
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10" visible="false" fx:id="serieBoxNotebooks">
                                        <Label text="Serie:" />
                                        <TextField fx:id="serieFieldConsultaNotebooks" prefWidth="240" />
                                    </HBox>
                                </StackPane>

                                <Button text="Consultar" onAction="#handleConsultarNotebooks"/>

                                <TableView fx:id="resultTableNotebooks" VBox.vgrow="ALWAYS" styleClass="table-cell">
                                    <columns>
                                        <TableColumn text="#" fx:id="ordenColumnNotebooks" prefWidth="60" />
                                        <TableColumn text="Serie" fx:id="serieColumnNotebooks" prefWidth="160" />
                                        <TableColumn text="MAC Address" fx:id="macAddressColumnNotebooks" prefWidth="200" />
                                        <TableColumn text="Usuario" fx:id="usuarioColumnNotebooks" prefWidth="100" />
                                        <TableColumn text="Fecha" fx:id="fechaColumnNotebooks" prefWidth="200" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </children>
                    </AnchorPane>
                </Tab>
                <Tab text="ABM" closable="false">
                    <StackPane alignment="TOP_CENTER">
                        <children>
                            <VBox fx:id="abmNotebooksSection" spacing="14" style="-fx-padding: 20;" maxWidth="520">
                                <Text text="Mantenimiento de Notebooks" styleClass="bold-underline" />
                                <GridPane hgap="10" vgap="10" alignment="CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                                        <ColumnConstraints prefWidth="300" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="30" />
                                        <RowConstraints minHeight="30" />
                                        <RowConstraints minHeight="30" />
                                        <RowConstraints minHeight="30" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Serie:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                        <TextField fx:id="serieFieldABM" promptText="Ingrese serie" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                        <Label text="MAC Address:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                        <TextField fx:id="macAddressFieldABM" promptText="Ingrese MAC" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                        <Label text="Usuario:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                        <TextField fx:id="usuarioFieldABM" promptText="Ingrese usuario" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                        <Label text="Fecha:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                        <TextField fx:id="fechaFieldABM" promptText="dd/MM/yyyy HH:mm:ss" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                                    </children>
                                </GridPane>

                                <HBox spacing="12" alignment="CENTER">
                                    <Button fx:id="addButtonNotebooks" text="Agregar" onAction="#handleAltaNotebooks" />
                                    <Button fx:id="updateButtonNotebooks" text="Modificar" onAction="#handleModificarNotebooks" />
                                    <Button fx:id="deleteButtonNotebooks" text="Eliminar" onAction="#handleBajaNotebooks" />
                                    <Button fx:id="findButtonNotebooks" text="Buscar" onAction="#handleBuscarNotebooks" />
                                </HBox>
                            </VBox>
                        </children>
                    </StackPane>
                </Tab>
                <Tab text="Exportar" closable="false">
                    <AnchorPane>
                        <children>
                            <VBox fx:id="exportarNotebooksSection" spacing="14" alignment="CENTER" style="-fx-padding: 20;" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                                <Text text="Exportar Datos Notebooks" styleClass="bold-underline" />
                                <ImageView fx:id="imageView_exportarNotebooks" fitWidth="500" fitHeight="250" preserveRatio="true" />
                                <Label text="Ejemplo de cÃ³mo se ve el archivo exportado" />
                                <Button fx:id="exportButtonNotebooks" text="Exportar" onAction="#handleExportarNotebooks" />
                            </VBox>
                        </children>
                    </AnchorPane>
                </Tab>
                <Tab text="Importar" closable="false">
                    <AnchorPane>
                        <children>
                            <VBox fx:id="importarNotebooksSection" spacing="14" alignment="CENTER" style="-fx-padding: 20;" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                                <Text text="Importar Datos Notebooks" styleClass="bold-underline" />
                                <ImageView fx:id="imageView_importarNotebooks" fitWidth="500" fitHeight="200" preserveRatio="true" />
                                <Label text="Ejemplo de Excel. Los datos deben estar en la primera hoja y el archivo debe ser .xlsx" />
                                <Button fx:id="importExcelButtonNotebooks" text="Importar Excel" onAction="#handleImportarExcelNotebooks" />
                            </VBox>
                        </children>
                    </AnchorPane>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
